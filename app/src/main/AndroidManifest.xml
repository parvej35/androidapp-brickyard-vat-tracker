<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="brickyard.tracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/report2_256"
        android:label="@string/app_name"
        android:roundIcon="@drawable/report2_256"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <activity
            android:name="brickyard.tracker.WelcomeSplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="brickyard.tracker.Dashboard"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="brickyard.tracker.AddRecord"
            android:screenOrientation="sensor" />
        <activity
            android:name="brickyard.tracker.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.UserProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.ResetPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.SearchTransaction"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.TransactionSearchDataList"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.TransactionList"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.TransactionDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.TransactionFilter"
            android:screenOrientation="portrait" />

        <!-- <activity android:screenOrientation="portrait" android:name="account.manager.PlayStoreLink" /> -->

        <activity
            android:name="brickyard.tracker.setting.Setting"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.setting.AddCategory"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.setting.General"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.setting.DeleteAllRecord"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.setting.UpdatePassword"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.setting.RestoreDB"
            android:screenOrientation="portrait" />

        <activity
            android:name="brickyard.tracker.report.Report"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.report.SearchDatewiseTransaction"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.report.SearchMonthlyTransaction"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.report.DatewiseTransactionList"
            android:screenOrientation="portrait" />
        <activity
            android:name="brickyard.tracker.report.MonthlyTransactionList"
            android:screenOrientation="portrait" />

    </application>

</manifest>